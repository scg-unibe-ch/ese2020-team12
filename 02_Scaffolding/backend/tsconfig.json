{
"compilerOptions": {
  "moduleResolution": "node",
  "module": "commonjs",
  "target": "es6",
  "esModuleInterop": true,
  "noImplicitAny": true,
  "removeComments": true,
  "preserveConstEnums": true,
  "outDir": "./build",
  "sourceMap": true,
  "types": ["node"]
},
"include": ["./src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
}
