{
"compilerOptions": {
  "moduleResolution": "node",
  "module": "commonjs",
  "target": "es6",
  "esModuleInterop": true,
  // original: "noImplicitAny": true,
  "noImplicitAny": false,
  "removeComments": true,
  "preserveConstEnums": true,
  "outDir": "./build",
  "sourceMap": true,
  "types": ["node"],
  // because an error in frontend
  "typeRoots": ["node_modules/@types"],
  "experimentalDecorators": true,
  "allowJs": true
},
"include": ["./src/**/*"],
"exclude": ["node_modules", "**/*.spec.ts"]
}
